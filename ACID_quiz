    <div id="result"></div>

    <script>
        const correctAnswers = {
            q1: 'a', q2: 'd', q3: 'b', q4: 'c', q5: 'd',
            q6: 'b', q7: 'a', q8: 'd', q9: 'c', q10: 'b',
            q11: 'd', q12: 'c', q13: 'b', q14: 'a', q15: 'b'
        };

        const feedbacks = {
            q1: "ACID stands for Atomicity, Consistency, Isolation, and Durability.",
            q2: "Atomicity ensures that a transaction is treated as a single, indivisible unit of work.",
            q3: "Consistency ensures that only valid data following all rules and constraints is written to the database.",
            q4: "Isolation ensures that concurrent execution of transactions results in a system state that would be obtained if transactions were executed sequentially.",
            q5: "Durability ensures that once a transaction has been committed, it will remain so, even in the event of power loss, crashes, or errors.",
            q6: "In the context of Atomicity, if a transaction is interrupted, all the changes made by the transaction are rolled back.",
            q7: "Consistency indeed ensures that a transaction brings the database from one valid state to another.",
            q8: "'Executing' is not a defined state of a transaction. The states are Active, Partially Committed, Failed, Aborted, and Committed.",
            q9: "The Isolation property is mainly achieved through concurrency control mechanisms.",
            q10: "Durability is typically implemented using transaction logs.",
            q11: "Durability is responsible for ensuring that the effects of a committed transaction survive permanently.",
            q12: "The state where a transaction has performed its last operation and the changes are saved to the database is called 'Committed'.",
            q13: "The Isolation property prevents interference between concurrent transactions.",
            q14: "'Cascadeless' in ACID context means that transactions can be rolled back without affecting other transactions.",
            q15: "Consistency is most closely related to maintaining data integrity and preventing corruption."
        };

        document.getElementById('quizForm').addEventListener('submit', function(e) {
            e.preventDefault();
            let score = 0;

            for (let i = 1; i <= 15; i++) {
                const questionName = `q${i}`;
                const selectedAnswer = document.querySelector(`input[name="${questionName}"]:checked`);
                const feedbackElement = document.getElementById(`feedback${i}`);
                
                if (selectedAnswer) {
                    if (selectedAnswer.value === correctAnswers[questionName]) {
                        score++;
                        feedbackElement.innerHTML = `<p class="correct">Correct!</p>`;
                    } else {
                        feedbackElement.innerHTML = `<p class="incorrect">Incorrect. ${feedbacks[questionName]}</p>`;
                    }
                } else {
                    feedbackElement.innerHTML = `<p class="incorrect">Not answered. ${feedbacks[questionName]}</p>`;
                }
                feedbackElement.style.display = 'block';
            }

            const percentage = (score / 15) * 100;
            const resultDiv = document.getElementById('result');
            resultDiv.innerHTML = `<h2>Your Score: ${score}/15 (${percentage.toFixed(2)}%)</h2>`;
        });
    </script>
</body></html>
